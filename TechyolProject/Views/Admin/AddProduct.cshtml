@model TechyolProject.Models.Product
@{
}


<h2>Ürün Ekle</h2>
<form asp-action="AddProduct" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Ürün İsmi</label>
        <input asp-for="Name" class="form-control" placeholder="Ürün İsmi"></input>
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="form-label">Ürün Fiyatı</label>
        <input asp-for="Price" class="form-control" placeholder="Ürün Fiyatı"></input>
        <span asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="form-label">Ürün Görseli</label>
        <input type="file" name="ImageFile" accept=".jpg, .jpeg, .png" />
        <span asp-validation-for="Image"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID" class="form-label">Kategori Numarası</label>
        <input asp-for="CategoryID" class="form-control" placeholder="Ürün İsmi"></input>
        <span asp-validation-for="CategoryID"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>

</form>